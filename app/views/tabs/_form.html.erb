<%= form_for(tab) do |f| %>
  <% if tab.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tab.errors.count, "error") %> prohibited this tab from being saved:</h2>

      <ul>
      <% tab.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.cktext_area :description, :as => :ckeditor, :class => 'ckeditor form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Save', class: "btn btn-sm btn-success" %>
  </div>
<% end %>